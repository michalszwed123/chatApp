
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  nick         String   @unique
  password     String
  hashedRt     String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  @@map("users")
}